{
	"manifest_version": 2,
	"name": "Minimal Digital Clock",
	"version": "1.2",
	"author": "notetau",

	"description": "Adds minimal digital clock in Toolbar",

	"icons": {
		"48": "icon48.png",
		"96": "icon96.png"
	},

	"browser_action": {
		"browser_style": true,
		"default_area": "navbar",
		"default_icon": "none.png",
		"default_popup": "popup.html",
		"default_title": "digital clock"
	},

	"background": {
		"scripts": ["badge-clock.js"]
	},

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},

	"permissions":  ["storage"]
}
